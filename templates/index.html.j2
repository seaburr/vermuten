<!doctype html>

<html>
<head>
    <title>Game ID: {{ game_key }}</title>
</head>
<link rel="stylesheet" href="../../static/style.css">
<h1>
    Riddle #{{ riddle_id }}
</h1>
<br>
<h2>
    {{ riddle }}
</h2>
  <img src="../../static/{{ image_name }}">
{% if not advance %}
    <form action="/play/{{ game_key }}">
      <label for="guess">Guess:</label>
      <input type="text" id="guess" name="guess" autocomplete="off">
      <input type="submit" value="Submit">
    </form>
    <h2>
        Hint: {{ hint }}
    </h2>
{% endif %}
{% if response %}
<br>
<h4>
    {{ response }}
</h4>
{% endif %}
<!--Hello clever kids! There is no client-side code, cache, or cookies that hold answers.-->
</html>
